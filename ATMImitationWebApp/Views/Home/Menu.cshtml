@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container title">
    <h3>Выберите тип операции</h3>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4">
            @using (Ajax.BeginForm("WithdrawCash", new AjaxOptions { HttpMethod="get", UpdateTargetId = "result" }))
            {
                <div class="form-group">
                    <input type="submit" value="Снятие наличных " class="btn btn-primary">
                </div>
            }
            @using (Ajax.BeginForm("ClientsCardInfo", new AjaxOptions { UpdateTargetId = "result" }))
            {
                <div class="form-group">
                    <input type="submit" value="Остаток на счете" class="btn btn-primary">
                </div>
            }
        </div>      
        <div class="col-md-4 col-sm-4" id="result"></div>       
    </div>
</div>





